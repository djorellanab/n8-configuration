{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2017", "es7", "es6", "dom"],
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./",
      "declaration": true,
      "rootDir": "src",
      "resolveJsonModule": true,
      "strict": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "src"
    ]
}